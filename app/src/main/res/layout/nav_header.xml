<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/blue"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/userimage_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:layout_marginEnd="4dp"
        android:id="@+id/user_name_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_toRightOf="@+id/user_imageView"
        android:text="User Name"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/user_imageView"
        app:layout_constraintEnd_toStartOf="@+id/view_profile_button"
        app:layout_constraintStart_toEndOf="@+id/user_imageView"
        app:layout_constraintTop_toTopOf="@+id/user_imageView" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/view_profile_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/profile_arrow"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/user_imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_imageView" />



</androidx.constraintlayout.widget.ConstraintLayout>